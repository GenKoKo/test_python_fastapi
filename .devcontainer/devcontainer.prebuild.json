{
    "name": "FastAPI Development Environment (Prebuild)",
    "dockerComposeFile": "../docker/docker-compose.yml",
    "service": "fastapi-app",
    "workspaceFolder": "/app",

    // é æ§‹å»ºå„ªåŒ–é…ç½®
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "development",
        "args": {
            "CODESPACES": "true",
            "INSTALL_DEV_TOOLS": "true",
            "PREBUILD": "true"
        }
    },

    // åŸºæœ¬è¨­å®š
    "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
    },

    // å¿…è¦çš„æ“´å±•ï¼ˆé æ§‹å»ºæ™‚å®‰è£ï¼‰
    "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.docker",
        "GitHub.copilot",
        "humao.rest-client"
    ],

    // ç«¯å£é…ç½®
    "forwardPorts": [8000, 5678],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI Application",
            "onAutoForward": "openBrowser",
            "protocol": "http"
        },
        "5678": {
            "label": "Python Debugger",
            "onAutoForward": "silent"
        }
    },

    // é æ§‹å»ºå‘½ä»¤ï¼ˆåœ¨é¡åƒæ§‹å»ºæ™‚åŸ·è¡Œï¼‰
    "onCreateCommand": [
        "bash",
        "-c",
        "echo 'ğŸ”¨ Running prebuild setup...' && pip install --upgrade pip && pip install -r requirements/dev.txt && echo 'âœ… Prebuild setup completed'"
    ],

    // å®¹å™¨å‰µå»ºå¾Œå‘½ä»¤ï¼ˆæ¯æ¬¡å•Ÿå‹• Codespace æ™‚åŸ·è¡Œï¼‰
    "postCreateCommand": [
        "bash",
        "-c",
        "echo 'ğŸš€ Setting up Codespaces environment...' && bash .devcontainer/setup.sh && just codespaces-setup && echo 'âœ… Codespaces setup completed'"
    ],

    // å•Ÿå‹•å‘½ä»¤
    "postStartCommand": [
        "bash",
        "-c",
        "echo 'ğŸŒŸ FastAPI Codespaces environment is ready!' && echo 'ğŸ’¡ Run \"just dev\" to start the development server' && echo 'ğŸ“– Visit http://localhost:8000/docs for API documentation'"
    ],

    // ç”¨æˆ¶é…ç½®
    "remoteUser": "root",
    "containerUser": "root",

    // åŠŸèƒ½é…ç½®ï¼ˆé æ§‹å»ºæ™‚å®‰è£ï¼‰
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "ppa": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "installDirectlyFromGitHubRelease": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true"
        }
    },

    // æ›è¼‰é…ç½®
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer,target=/app/.devcontainer,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/docs,target=/app/docs,type=bind,consistency=cached"
    ],

    // è‡ªå®šç¾©é…ç½®
    "customizations": {
        "vscode": {
            "settings": {
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": ["tests"],
                "python.analysis.autoImportCompletions": true,
                "python.analysis.typeCheckingMode": "basic"
            }
        }
    },

    // é æ§‹å»ºé…ç½®
    "waitFor": "onCreateCommand",
    "updateContentCommand": "pip install --upgrade pip && pip install -r requirements/dev.txt",
    "postAttachCommand": "echo 'ğŸ¯ Codespace attached and ready for development!'"
}
