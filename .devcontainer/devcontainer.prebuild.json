{
    "name": "FastAPI Development Environment (Prebuild)",
    "dockerComposeFile": "../docker/docker-compose.yml",
    "service": "fastapi-app",
    "workspaceFolder": "/app",

    // 預構建優化配置
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "development",
        "args": {
            "CODESPACES": "true",
            "INSTALL_DEV_TOOLS": "true",
            "PREBUILD": "true"
        }
    },

    // 基本設定
    "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
    },

    // 必要的擴展（預構建時安裝）
    "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.docker",
        "GitHub.copilot",
        "humao.rest-client"
    ],

    // 端口配置
    "forwardPorts": [8000, 5678],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI Application",
            "onAutoForward": "openBrowser",
            "protocol": "http"
        },
        "5678": {
            "label": "Python Debugger",
            "onAutoForward": "silent"
        }
    },

    // 預構建命令（在鏡像構建時執行）
    "onCreateCommand": [
        "bash",
        "-c",
        "echo '🔨 Running prebuild setup...' && pip install --upgrade pip && pip install -r requirements/dev.txt && echo '✅ Prebuild setup completed'"
    ],

    // 容器創建後命令（每次啟動 Codespace 時執行）
    "postCreateCommand": [
        "bash",
        "-c",
        "echo '🚀 Setting up Codespaces environment...' && bash .devcontainer/setup.sh && just codespaces-setup && echo '✅ Codespaces setup completed'"
    ],

    // 啟動命令
    "postStartCommand": [
        "bash",
        "-c",
        "echo '🌟 FastAPI Codespaces environment is ready!' && echo '💡 Run \"just dev\" to start the development server' && echo '📖 Visit http://localhost:8000/docs for API documentation'"
    ],

    // 用戶配置
    "remoteUser": "root",
    "containerUser": "root",

    // 功能配置（預構建時安裝）
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "ppa": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "installDirectlyFromGitHubRelease": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true"
        }
    },

    // 掛載配置
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer,target=/app/.devcontainer,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/docs,target=/app/docs,type=bind,consistency=cached"
    ],

    // 自定義配置
    "customizations": {
        "vscode": {
            "settings": {
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": ["tests"],
                "python.analysis.autoImportCompletions": true,
                "python.analysis.typeCheckingMode": "basic"
            }
        }
    },

    // 預構建配置
    "waitFor": "onCreateCommand",
    "updateContentCommand": "pip install --upgrade pip && pip install -r requirements/dev.txt",
    "postAttachCommand": "echo '🎯 Codespace attached and ready for development!'"
}
