# FastAPI 應用環境變量配置示例
# 複製此文件為 .env 並根據需要修改配置

# 應用基本配置
APP_NAME="FastAPI 初級入門 API"
APP_DESCRIPTION="這是一個 FastAPI 的基本入門實作，包含常用的 API 操作"
APP_VERSION="1.0.0"

# 服務器配置
HOST="127.0.0.1"
PORT=8000
RELOAD=true

# 日誌配置
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE="logs/app.log"  # 取消註釋以啟用文件日誌

# 測試配置
ENABLE_AUTO_TEST=true
TEST_DELAY=2

# 數據配置
POPULATE_SAMPLE_DATA=true

# API 配置
API_PREFIX=""
DOCS_URL="/docs"
REDOC_URL="/redoc"

# 開發模式配置
DEBUG=false

# 生產環境建議配置（註釋掉的是生產環境建議值）
# HOST="0.0.0.0"
# PORT=80
# RELOAD=false
# LOG_LEVEL="WARNING"
# LOG_FILE="logs/app.log"
# ENABLE_AUTO_TEST=false
# POPULATE_SAMPLE_DATA=false
# DEBUG=false